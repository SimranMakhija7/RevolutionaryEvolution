<% include partials/header %>
    <br>
    <br>

    <div class="ui main text container">
    <div class="ui huge header"><h1>SEARCH THE SPECIES</h1></div>

    <form action="/home" method="POST">
        <input type="text" name="query" class="form-control" placeholder="Enter the name" aria-label="Enter the name" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button" id="button-addon2">SEARCH</button>
        </div>
    </form>
    
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% data.forEach(function(data){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= data.coverImageURL %>" >
                    </div>
                    <div class="content">
                        <a class="header" href="/show/<%=data.name %>"><%=data.name%></a>
                        <div class="meta">
                            <span><%= data.name %></span>
                        </div>
                        <div class="description">
                            <p><%= data.briefDescription.substring(0, 100); %></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/show/<%= data.name %>">
                                Read More
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer %>
